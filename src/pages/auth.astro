---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Login from '~/components/widgets/login.astro';
import Register from '~/components/widgets/register.astro';

const metadata = {
  title: 'Authentication',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Authentication" title="Unsuspicious Account" />

  <div class="auth-container">
    <div class="auth-section">
      <Login
        title="Login"
        subtitle="Welcome back! Please login to your account."
        inputs={[
          {
            type: 'text',
            name: 'username',
            label: 'Username',
          },
          {
            type: 'password',
            name: 'password',
            label: 'Password',
          },
        ]}
        button="Login"
      />
    </div>
    <div class="auth-section">
      <Register
        title="Register"
        subtitle="Create an account to access all features."
        inputs={[
          {
            type: 'text',
            name: 'username',
            label: 'Username',
          },
          {
            type: 'password',
            name: 'password',
            label: 'Password',
          },
        ]}
        button="Register"
      />
    </div>
  </div>

  <style>
    .auth-container {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }
    .auth-section {
      flex: 1;
      padding: 
      0 1rem;
    }
  </style>
</Layout>