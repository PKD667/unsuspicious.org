---
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Features4 from '~/components/widgets/Features4.astro';
import Hero from '~/components/widgets/Hero.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    title="The Unsuspicious Team"
    subtitle="At Unsuspicious Industries, we're dedicated to creating cutting-edge technology solutions that drive human progress and improve lives. Our team of passionate innovators is committed to revolutionizing the way you tackle modern challenges and empowering you to succeed."
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Community Gathering',
    }}
  />


  <Features4
    title="The Founders"
    tagline="Unsuspicious core"
    columns={2}
    items={[
      {
        title: 'CRN',
        description:
          'Ex-entrepreneur in edge markets. ',
        icon: 'tabler:briefcase',
      },
      {
        title: 'PKD',
        description:
          'Researcher in Low-level programming and AI/ML. ',
        icon: 'tabler:brain',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->
  <Features4
    title="Engineers & Researchers"
    columns={2}
    items={[
      {
        title: 'Alba',
        description: 'Artistic director',
        icon: 'tabler:palette',
      },
      {
        title: 'Bus',
        description: 'Engineering lead',
        icon: 'tabler:assembly',
      }
    ]}
  />

  <!-- Our Departments Section ************** -->

  <Features2
    title="Our Departments"
    columns={3}
    items={[
      {
        title: 'Sales & Finances',
        description:
          'Our Sales & Finances department focuses on fundraising, partnerships, and financial management to support our initiatives. We also engage in commercial activities to generate revenue for our programs.',
        icon: 'tabler:coin-bitcoin',
      },
      {
        title: 'Research & Developpement',
        description:
          'Our R&D department is dedicated to advancing technological solutions and conducting research to address social justice issues. We collaborate with experts in various fields to develop innovative projects and initiatives.',
        icon: 'tabler:flask',
      },
      {
        title: 'Design & Art',
        description:
          'Our Design & Art department is responsible for creating visual content, artistic projects, and promotional materials for our programs. We believe in the power of art to inspire change and raise awareness about social justice issues.',
        icon: 'tabler:book',
      }
    ]}
  />


</Layout>