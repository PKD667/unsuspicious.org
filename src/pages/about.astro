---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    title="We are a team dedicated to social justice"
    subtitle='At [Your Organization Name], we are a passionate team committed to promoting social justice, supporting marginalized communities, and fostering artistic expression. We strive to create a more equitable and inclusive society through our various initiatives and programs. Our dedication to ethical practices and community engagement drives us to continuously innovate and improve our efforts. We are proud of our achievements and the positive impact we have made in the lives of many. Join us in our mission to make a difference.'
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Community Gathering',
    }}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact"
    stats={[
      { title: 'Ideas', amount: '50+' },
      { title: 'Research Projects', amount: '10+' },
      { title: 'Art Projects', amount: '5+' },
      { title: 'Advocacy Campaigns', amount: '20+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Initiatives"
    columns={3}
    isAfterContent={true}
    items={[
        {
        title: 'Tech Outreach',
        description:
          'We engage with tech communities to provide support, resources, and advocacy for technological advancements. Our outreach programs aim to empower developers and promote innovation.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Artistic Expression',
        description:
          'We believe in the power of art to inspire change. Our art programs provide a platform for marginalized voices to express themselves and raise awareness about social justice issues.',
        icon: 'tabler:palette',
      },
      {
        title: 'Educational Workshops',
        description:
          'Our educational workshops focus on raising awareness about social justice, providing tools for advocacy, and fostering a deeper understanding of systemic issues.',
        icon: 'tabler:book',
      }
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="We are committed to promoting social justice and supporting artistic expression."
    items={[
      {
        title: 'Inclusivity',
        description:
          'We strive to create an inclusive environment where everyone feels valued and respected. Our programs are designed to be accessible to all.',
      },
      {
        title: 'Empowerment',
        description:
          'We believe in empowering individuals and communities to take action and create positive change. Our initiatives provide the tools and support needed to make a difference.',
      },
      {
        title: 'Creativity',
        description:
          'We encourage creativity and artistic expression as a means to inspire change and raise awareness about social justice issues.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Achievements"
    subtitle="We are proud of the impact we have made through our dedication to social justice and artistic expression."
    isReversed={true}
    callToAction={{
      text: 'Learn More',
      href: '/achievements',
    }}
    items={[
      {
        title: 'Tech Innovations',
        description: 'Our projects have driven technological advancements, delivering cutting-edge solutions and fostering innovation.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Art Exhibitions',
        description:
          'We have organized numerous art exhibitions that showcase the work of marginalized artists and raise awareness about social justice issues.',
        icon: 'tabler:paint-filled',
      },
      {
        title: 'Advocacy Success',
        description:
          'Our advocacy campaigns have led to significant policy changes and increased awareness about critical social justice issues.',
        icon: 'tabler:speakerphone',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Locations"
    subtitle="Find us in these communities"
    columns={4}
    items={[
      {
        title: 'New York, USA',
        description: '123 Main Street, New York, NY 10001',
        icon: 'tabler:map-pin',
      },
      {
        title: 'London, UK',
        description: '456 High Street, London, UK W1D 3QY',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Sydney, Australia',
        description: '789 George Street, Sydney, NSW 2000',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Cape Town, South Africa',
        description: '101 Long Street, Cape Town, 8001',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get Involved"
    tagline="Join Us"
    columns={2}
    items={[
      {
        title: 'Volunteer with Us',
        description:
          'Join our team of dedicated volunteers and help us make a difference. Your time and skills can have a significant impact on our initiatives.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Support Our Cause',
        description:
          'Your donations help us continue our work and expand our programs. Every contribution, big or small, makes a difference.',
        icon: 'tabler:heart',
      },
    ]}
  />
</Layout>