---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '../components/widgets/Hero.astro';

const metadata = {
  title: 'Unsuspicious Industries Product Page',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Unsuspicious Industries"
    title="Crafted with Care and Precision!"
    subtitle="Discover the unique features and benefits of our products. Experience the difference with Unsuspicious Industries."
    actions={[
      { variant: 'primary', text: 'Explore Products', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more about us', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1473188588951-666fce8e7c68?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2174&q=80',
      alt: 'A spotlight on a product from Unsuspicious Industries.',
    }}
  />

  <!-- add a form with email input for the newsletter -->
  
</Layout>